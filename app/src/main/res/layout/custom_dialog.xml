<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_margin="10dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/pastelDKSkyBlue">
    </View>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
        <ImageView
            android:id="@+id/dialogUsageImage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp" />

        <TextView
            android:id="@+id/dialogUsageText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="15sp"
            android:gravity="left"
            android:textColor="@color/black"
            android:layout_margin="10dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/pastelDKSkyBlue">
    </View>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
        <ImageView
            android:id="@+id/dialogWarnImage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp" />

        <TextView
            android:id="@+id/dialogWarnText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="15sp"
            android:gravity="left"
            android:textColor="@color/black"
            android:layout_margin="10dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/pastelDKSkyBlue">
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/OkBtn"
            android:text="확인"
            android:textColor="@color/black"
            android:background="#fff"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1" >
        </Button>

        <View
            android:layout_width="2dp"
            android:layout_height="50dp"
            android:background="@color/pastelDKSkyBlue">
        </View>

        <Button
            android:id="@+id/NoShowAgainBtn"
            android:text="다시 보지 않기"
            android:textColor="@color/black"
            android:background="#fff"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1" >
        </Button>

        <!-- 기기마다 기본 배경 색이 다른 것 같음 -->

    </LinearLayout>

</LinearLayout>

